<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Theme.MaterialComponents">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_numbers</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="ButtonsNumbers" parent="@style/Button">
        <item name="android:background">@drawable/btn_numbers</item>
        <item name="backgroundTint">#424242</item>
    </style>

    <style name="ButtonsSignUp" parent="@style/Button">
        <item name="android:background">@drawable/btn_sign_2</item>
        <item name="backgroundTint">#c4c4c4</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonsSignRight" parent="@style/Button">
        <item name="android:background">@drawable/btn_sign_1</item>
        <item name="backgroundTint">#ffbb00</item>
    </style>

    <style name="MyTextAppearance">
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_size</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">number</item>
    </style>

</resources>